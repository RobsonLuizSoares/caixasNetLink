<%- include('header') %>
<div class="container user py-4">
    <div class="alert text-center bg-info my-4">
        <h1 class="mt-4 "> Ordens de Serviço </h1>
    </div>
        <hr />
    <div class="container my-3 ">
        <h3> Abrir uma Ordem de Serviço </h3>
    </div>
    <div class="card">
        <div class="card-body pb-5">
            <form>
                <div class="form-group">
                    <label for="client">Cliente</label>
                    <input type="text" class="form-control" id="client" name='client' placeholder="digite o nome do cliente">
                </div>
                <div class="row">
                    <div class="form-group col-md-4">
                            <label for="fone">Telefone</label>
                            <input type="text" class="form-control" id="fone" name='fone' placeholder="digite o telefone do cliente">
                    </div>
                    <div class="form-group col-md-8">
                            <label for="emailClient">E-mail</label>
                            <input type="email" class="form-control" id="emailClient" name='emailClient' placeholder="digite o e-mail do cliente">
                    </div>
                </div>
                <div class="form-group">
                    <label for="infoOs">Serviço</label>
                    <textarea class="form-control" id="infoOs" name='infoOs' placeholder="Descrição do serviço" rows="3"></textarea>
                </div>
                <button type="submit" class="btn  btn-primary">Gravar</button>
            </form>
        </div>
    </div>
</div>
        

    
<%- include('footer') %>